const { wineListing } = Astro.props;
---

<li>
  <div class="wine-name">
    <div>
      <span>{wineListing.name}</span>
      <span>{wineListing.year}</span>,
      <span>{wineListing.region}</span>,
      <span>{wineListing.country}</span>
    </div>
    <div class="spacer"></div>
    <a target="_blank" href={wineListing.link}>{wineListing.price.toFixed(2)}</a
    >
  </div>
  <div class="taste">
    {
      wineListing.taste.map((taste: any) => (
        <span class="taste-item">{taste}</span>
      ))
    }
  </div>
</li>
<style>
  li {
    margin: 0.8rem 0;
  }
  .wine-name {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    list-style-type: none;
    /* border: 1px solid grey; */
  }
  /* .spacer {
    border-bottom: 1px dotted white;
    content: "&nbsp;";
    min-width: 30%;
  } */
  .taste {
    display: flex;
    flex-direction: row;
    align-items: center;
    list-style-type: none;
    /* border: 1px solid grey; */
    margin-left: 0px;
    text-transform: lowercase;
  }
  .taste-item {
    padding: 0 10px 0;
    border-right: 1px solid white;
    font-style: italic;
    font-size: 0.8em;
  }

  .taste-item:first-child {
    padding-left: 0;
  }
  .taste-item:last-child {
    border-right: none;
  }
  a {
    color: inherit;
    text-decoration: none;
  }
</style>
